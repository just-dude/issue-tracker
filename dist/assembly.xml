<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/resources</directory>
      <outputDirectory/>
    </fileSet>
    <fileSet>
      <directory>target/lib</directory>
      <outputDirectory>updater/lib</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>updater/lib</outputDirectory>
      <includes>
        <include>issue-tracker:dist</include>
      </includes>
      <outputFileNameMapping>update.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>server/lib</outputDirectory>
      <includes>
        <include>issue-tracker:application</include>
      </includes>
      <outputFileNameMapping>application.jar</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <unpack>true</unpack>
      <outputDirectory>server/frontend</outputDirectory>
      <includes>
        <include>issue-tracker:frontend</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
